<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="sqmaPU" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/sqmaDS</jta-data-source>
		<class>com.sqma.model.CaracteristicaCalidad</class>
		<class>com.sqma.model.EscenarioCalidad</class>
		<class>com.sqma.model.EvaluacionEscenarioCalidad</class>
		<class>com.sqma.model.FaseProducto</class>
		<class>com.sqma.model.MedidaMetrica</class>
		<class>com.sqma.model.MetricaCalidad</class>
		<class>com.sqma.model.ModeloCalidad</class>
		<class>com.sqma.model.MuestraEvaluacion</class>
		<class>com.sqma.model.ProcesoNegocio</class>
		<class>com.sqma.model.TipoEscalaMetrica</class>
		<class>com.sqma.model.TipoMedidaMetrica</class>
		<class>com.sqma.model.FuncionMetrica</class>
		<class>com.sqma.model.ParametroEscenarioCalidad</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>
